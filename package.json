{
	"name": "akari",
	"description": "A (configurable) helper bot for Discord.",
	"version": "1.0.0",
	"author": {
		"name": "janleigh",
		"url": "https://github.com/janleigh/servant"
	},
	"license": "MIT",
	"main": "build/index.js",
	"scripts": {
		"build": "yarn build:clean && yarn compile",
		"build:production": "yarn build:clean && yarn format:check && yarn lint && yarn compile",
		"build:clean": "rm -rvf ./build/",
		"compile": "npx sucrase src -d build --transforms typescript,imports",
		"format": "prettier --write src",
		"format:check": "prettier --check src",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"start:development": "NODE_ENV=development node --trace-deprecation .",
		"start:production": "NODE_ENV=production node .",
		"husky": "husky install .github/husky"
	},
	"devDependencies": {
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.2",
		"sucrase": "^3.29.0",
		"typescript": "^5.0.0"
	},
	"packageManager": "yarn@3.6.1",
	"dependencies": {
		"@sapphire/framework": "^4.2.0",
		"@sapphire/pieces": "^3.6.3",
		"@sapphire/plugin-logger": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"discord.js": "^14.7.1",
		"dotenv": "^16.0.3",
		"eslint": "latest",
		"eslint-plugin-prettier": "^4.2.1"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"yarn lint:fix",
			"yarn format"
		]
	}
}
